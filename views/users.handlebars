
<table class='table'>
  <thead class='thead-dark'>
    <tr>
      <th scope='col'>Username</th>
      <th scope='col'>First</th>
      <th scope='col'>Last</th>
      <th scope='col'>Assign to a Role</th>
      <th scope='col'>Submit</th>
    </tr>
  </thead>
    <tbody id="roleTable">
  {{#each users as |user|}}
      <tr id="{{id}}">
        <th scope='row'><a href="/user/{{user.username}}">{{user.username}}</a> </th>
        <td class="capitalize">{{user.first_name}}</td>
        <td class="capitalize">{{user.last_name}}</td>
            <form>
        <td>
                <select name='role_id' id='userRole_{{id}}'>
                    <option value=''>Choose a role</option>
                    {{#each ../roles as |role|}}
                    <option id="{{role.id}}" class="option" value='{{role.id}}'>{{role.team.team_name}} {{role.title}}</option>
                    {{/each}}
                </select>
        </td>
        <td>
          <input type='submit' value='Submit' class='btn btn-primary btn-sm' id="submit-{{id}}" data-user="{{id}}" data-value="userRole_{{id}}"/>
        </td>
            </form>
      </tr>
  {{/each}}
    </tbody>
</table>


<script src='/js/userRole.js'></script>


