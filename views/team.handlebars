<h1>{{team.team_name}} Home</h1>
{{#each team.events as |event|}}
  <div class='card-container'>
    <div class='card'>
      <div class='card-header'>{{event.event_name}}</div>
      <div>
        <p>Date:{{format_date event.event_date}}</p>
        <p>Time:{{format_time event.event_date}}</p>
      </div>
    </div>
  </div>
{{/each}}
{{#each team.announcements as |announcement|}}
  <div class='card-container'>
    <div class='card'>
      <div class='card-header'>{{announcement.title}}</div>
      <div>
        <p>Date:{{format_date announcement.date_created}}</p>
        <p>Message:{{announcement.message}}</p>
      </div>
    </div>
  </div>
{{/each}}